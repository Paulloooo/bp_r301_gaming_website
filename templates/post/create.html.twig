{% extends 'base.html.twig' %}

{% block title %}Gaming website{% endblock %}

{% block body %}
    <link href="{{ asset('style.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bootstrap.css') }}" rel="stylesheet"/>

    <header>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_logout') }}">Log out</a>
        {% else %}
            <a href="{{ path('app_login') }}">Log in</a>
        {% endif %}
        <a href ={{ path('app_website') }}> <div class = "title">
                <h1>Random gaming website</h1>
                <img id="logo" src="{{ asset('gaming.png') }}" alt="Gaming!"/>
            </div></a>
        <nav class="navbar">
            <ul>
                <li>Announcements</li>
                <li><a href = {{ path('app_show') }}>Posts</a></li>
                <li><a href = {{ path('app_video') }}>Videos</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
            </ul>
        </nav>
    </header>
    <footer>
        <h2>Create a post</h2>
        <form method="post" class="create_article">
            <label>
                <input type="text" name="title" value="Title of article">
            </label>
            <label>
                <textarea name="content"></textarea>
            </label>
            <label>
                <input type="text" name="link" value="Image">
            </label>
            <button type="submit" name="Publish" id="publication">Publish !</button>
        </form>

    </footer>
    </div>
{% endblock %}
