{% extends 'base.html.twig' %}

{% block title %}Log in to website !{% endblock %}

{% block body %}
    <link rel="stylesheet" href={{ asset('bootstrap.css') }}>
    <link rel="stylesheet" href={{ asset ('style.css') }}>
    <header>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_logout') }}">Log out</a>
        {% else %}
            <a href="{{ path('app_login') }}">Log in</a>
        {% endif %}
        <a href ={{ path('app_website') }}> <div class = "title">
                <h1>Random gaming website</h1>
                <img id="logo" src="{{ asset('gaming.png') }}" alt="Gaming!"/>
            </div></a>
        <nav class="navbar">
            <ul>
                <li>Announcements</li>
                <li><a href = {{ path('app_show') }}>Posts</a></li>
                <li><a href = {{ path('app_video') }}>Videos</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
            </ul>
        </nav>
    </header>
    <footer>
        <h1>Sign in enter website</h1>
        <div class ="container">
            <form method="post">
                {% if error is defined%}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% endif %}

                <div class="div_email">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail">
                </div>
                <div class="div_passwd">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword">
                </div>
                <div class="div_button">
                    <button type="submit" name="validate" id="inputLogin">Sign in</button>
                </div>
            </form>
            Don't have an account ? <a href="{{ path('app_register') }}"> Create it !</a>
        </div>
    </footer>
{% endblock %}
