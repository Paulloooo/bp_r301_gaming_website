{% extends 'base.html.twig' %}

{% block title %}Log in to website !{% endblock %}

{% block body %}
    <link href="{{ asset('bootstrap.css') }}" rel="stylesheet"/>
    <link href="{{ asset('style.css') }}" rel="stylesheet"/>
    <nav class="navbar">
        <div class="logo-login">
            <div class="logo">
                <a href ={{ path('app_website') }}><h1>Fast Rocket</h1></a>
            </div>
            <div class="log">
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}">Log out</a>&nbsp;&nbsp;&nbsp;
                {% else %}
                    <a href="{{ path('app_login') }}">Log in</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin') }}">Admin panel</a>
                {% endif %}
            </div>
        </div>
        <ul>
            <li><a href="{{ path('app_show_ann') }}">Announcements</a></li>
            <li><a href="{{ path('app_show') }}">Posts</a></li>
            <li><a href="{{ path('app_video') }}">Videos</a></li>
            <li><a href="{{ path('app_contact') }}">Contact</a></li>
        </ul>
    </nav>
    <footer>
        <h1>Sign in enter website</h1>
        <div class ="container">
            <form method="post">
                {% if error is defined%}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% endif %}

                <div class="div_email">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail">
                </div>
                <div class="div_passwd">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword">
                </div>
                <div class="div_button">
                    <button type="submit" name="validate" id="inputLogin">Sign in</button>
                </div>
            </form>
            Don't have an account ? <a href="{{ path('app_register') }}"> Create it !</a>
        </div>
    </footer>
{% endblock %}
