{% extends 'base.html.twig' %}

{% block title %}Log in to website !{% endblock %}

{% block body %}
    <link rel="stylesheet" href={{ asset('bootstrap.css') }}>
    <link rel="stylesheet" href={{ asset ('style.css') }}>

    <h1>Sign in enter website</h1>
    <div class ="container">
        <form method="post">
            {% if error is defined%}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% endif %}

            <div class="div_email">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail">
            </div>
            <div class="div_passwd">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword">
            </div>
            <div class="div_button">
                <button type="submit" name="validate" id="inputLogin">Sign in</button>
            </div>
        </form>
        Don't have an account ? <a href="{{ path('app_register') }}"> Create it !</a>
    </div>
{% endblock %}
