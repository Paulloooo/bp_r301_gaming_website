{% extends 'base.html.twig' %}

{% block title %}Gaming website{% endblock %}

{% block body %}
    <link href="{{ asset('bootstrap.css') }}" rel="stylesheet"/>
    <link href="{{ asset('style.css') }}" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    <nav class="navbar">
        <div class="logo-login">
            <div class="logo">
                <a href ={{ path('app_website') }}><h1>Fast Rocket</h1></a>
            </div>
            <div class="log">
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}">Log out</a>&nbsp;&nbsp;&nbsp;
                {% else %}
                    <a href="{{ path('app_login') }}">Log in</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin') }}">Admin panel</a>
                {% endif %}
            </div>
        </div>
        <ul>
            <li><a href="{{ path('app_show_ann') }}">Announcements</a></li>
            <li><a href="{{ path('app_show') }}">Posts</a></li>
            <li><a href="{{ path('app_video') }}">Videos</a></li>
            <li><a href="{{ path('app_contact') }}">Contact</a></li>
        </ul>
    </nav>
    <footer>
        <div class="container">
            <div class="row align-self-center">
                <div class="col">
                    Twitter
                </div>
                <div class="col">
                    <a href="https://twitter.com/messages/compose?recipient_id=989532477516582914&ref_src=twsrc%5Etfw" class="twitter-dm-button" data-screen-name="https://twitter.com/p_brnx" data-show-count="false">Message @https://twitter.com/p_brnx</a>
                </div>
            </div>
            <div class="row align-self-center">
                <div class="col">
                    Mail
                </div>
                <div class="col">
                    <a href = "mailto: paul.biarneix@etu.unilim.fr">Send Email ! </a>
                </div>
            </div>
            Ou vous pouvez nous contacter par ce formulaire :
            </br>
            <form method="post">
                <label>
                    <textarea name="message"></textarea>
                </label>
                </br>
                {% if is_granted('ROLE_USER') %}
                    <button type="submit" name="Publish" id="publication">Send message</button>
                {% else %}
                    <a href="{{ path('app_login') }}">Log in to send message !</a>
                {% endif %}
            </form>
        </div>
    </footer>
{% endblock %}
