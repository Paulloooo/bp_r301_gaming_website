{% extends 'base.html.twig' %}

{% block title %}Gaming website{% endblock %}

{% block body %}
    <link href="{{ asset('bootstrap.css') }}" rel="stylesheet"/>
    <link href="{{ asset('style.css') }}" rel="stylesheet"/>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

    <nav class="navbar">
        <div class="logo-login">
            <div class="logo">
                <a href ={{ path('app_website') }}><h1>Fast Rocket - Admin</h1></a>
            </div>
            <div class="log">
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}">Log out</a>&nbsp;&nbsp;&nbsp;
                {% else %}
                    <a href="{{ path('app_login') }}">Log in</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin') }}">Admin panel</a>
                {% endif %}
            </div>
        </div>
        <ul>
            <li><a href="{{ path('app_show_ann') }}">Announcements</a></li>
            <li><a href="{{ path('app_show') }}">Posts</a></li>
            <li><a href="{{ path('app_video') }}">Videos</a></li>
            <li><a href="{{ path('app_contact') }}">Contact</a></li>
        </ul>
    </nav>
    <footer>
        <div class= "container">
            <h2>Message {{ messages.id }}</h2>
            {{ messages.contentMessage }}
            </br>
            {{ messages.emailUser }}
            </br>
            <a href = "mailto: {{ messages.emailUser }}">Send Email ! </a>
            </br>
            <form method="post">
                <label>
                    <textarea name="message"></textarea>
                </label>
                </br>
                <button type="submit" name="Publish" id="publication">Answer</button>
            </form>
            <a href ={{ path('app_website') }}><h5>Retour au menu</h5></a>
         </div>
    </footer>
{% endblock %}
